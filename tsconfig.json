{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "awesome-ui": [
        "components/index.ts"
      ],
      "awesome-ui/esm/*": [
        "components/*"
      ],
      "awesome-ui/lib/*": [
        "components/*"
      ],
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "components",
    "global.d.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}